---
interface Props {
  title?: string;
  text?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Rechtliche Fragen?",
  text = "Lassen Sie sich von einem spezialisierten Familienrechtsanwalt beraten.",
  buttonText = "Kostenlose Ersteinsch√§tzung",
  buttonLink = "/kontakt"
} = Astro.props;
---

<section class="bg-navy py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-serif font-bold text-white mb-4">{title}</h2>
        <p class="text-blue-100 mb-8 text-lg">{text}</p>
        <a href={buttonLink} class="inline-block bg-gold text-white px-8 py-4 rounded font-semibold text-lg hover:bg-opacity-90 transition">{buttonText}</a>
    </div>
</section>

                        <td class="px-4 py-3">Zerrüttung</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Rechtliche Grundlagen -->
    <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-3xl font-serif font-bold text-navy mb-6">Rechtliche Grundlagen</h2>

        <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-300">
                <thead class="bg-navy text-white">
                    <tr>
                        <th class="px-4 py-3 text-left">Artikel</th>
                        <th class="px-4 py-3 text-left">Regelungsinhalt</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <tr class="bg-white">
                        <td class="px-4 py-3 font-medium">Art. 104 ZGB</td>

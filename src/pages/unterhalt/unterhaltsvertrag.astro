        <table class="min-w-full bg-white border border-gray-200">
            <thead class="bg-navy text-white">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Personengruppe</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">Situation</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold">KESB-Genehmigung?</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <tr>
                    <td class="px-6 py-4 text-gray-700 font-semibold">Unverheiratete Eltern</td>
                    <td class="px-6 py-4 text-gray-700">Bei Trennung, Geburt des Kindes, Änderung der Betreuungssituation</td>
                    <td class="px-6 py-4 text-gray-700 font-semibold text-green-600">Ja</td>
                </tr>
                <tr class="bg-gray-50">
                    <td class="px-6 py-4 text-gray-700 font-semibold">Geschiedene Eltern</td>
                    <td class="px-6 py-4 text-gray-700">Bei nachträglicher Änderung ausserhalb eines Gerichtsverfahrens</td>
                    <td class="px-6 py-4 text-gray-700 font-semibold text-green-600">Ja</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 text-gray-700 font-semibold">Getrennt lebende Ehegatten</td>
                    <td class="px-6 py-4 text-gray-700">Bei Regelung ausserhalb des Eheschutzverfahrens</td>
                    <td class="px-6 py-4 text-gray-700 font-semibold text-green-600">Ja</td>
                </tr>
                <tr class="bg-gray-50">
                    <td class="px-6 py-4 text-gray-700 font-semibold">Volljährige Kinder</td>
                    <td class="px-6 py-4 text-gray-700">Regelung des Volljährigenunterhalts direkt mit Eltern</td>

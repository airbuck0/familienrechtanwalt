---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';

const articles = [
  { title: "Gemeinsames Sorgerecht", href: "/sorgerecht/gemeinsames-sorgerecht", desc: "Das gemeinsame Sorgerecht nach Trennung" },
  { title: "Alleiniges Sorgerecht", href: "/sorgerecht/alleiniges-sorgerecht", desc: "Wann wird alleiniges Sorgerecht erteilt?" },
  { title: "Alternierende Obhut", href: "/sorgerecht/alternierende-obhut", desc: "Das Wechselmodell in der Schweiz" },
  { title: "Umgangsrecht", href: "/sorgerecht/umgangsrecht", desc: "Das Besuchsrecht des nicht betreuenden Elternteils" },
  { title: "Umgangsregelung", href: "/sorgerecht/umgangsregelung", desc: "Gestaltung der Besuchsrechtsregelung" },
  { title: "Umgangsrecht verweigern", href: "/sorgerecht/umgangsrecht-verweigern", desc: "Einschränkung des Besuchsrechts" },
  { title: "Umgangsrecht Vater", href: "/sorgerecht/umgangsrecht-vater", desc: "Besuchsrecht des Vaters" },
  { title: "Umgangsrecht Kind", href: "/sorgerecht/umgangsrecht-kind", desc: "Rechte des Kindes beim Umgang" },
  { title: "Umgangsrecht Grosseltern", href: "/sorgerecht/umgangsrecht-grosseltern", desc: "Besuchsrecht der Grosseltern" },
  { title: "Betreuter Umgang", href: "/sorgerecht/betreuter-umgang", desc: "Begleiteter Umgang mit dem Kind" },
  { title: "Elterliche Sorge beantragen", href: "/sorgerecht/elterliche-sorge-beantragen", desc: "Antrag auf elterliche Sorge" },
  { title: "Elterliche Sorge übertragen", href: "/sorgerecht/elterliche-sorge-uebertragen", desc: "Übertragung der Sorge" },
  { title: "Entzug elterliche Sorge", href: "/sorgerecht/entzug-elterliche-sorge", desc: "Wann wird das Sorgerecht entzogen?" },
  { title: "Sorgeerklärung", href: "/sorgerecht/sorgeerklaerung", desc: "Erklärung der gemeinsamen Sorge" },
  { title: "Sorgerecht für Kinder", href: "/sorgerecht/sorgerecht-kinder", desc: "Grundlagen des Sorgerechts" },
  { title: "Aufenthaltsbestimmungsrecht", href: "/sorgerecht/aufenthaltsbestimmungsrecht", desc: "Wer bestimmt den Wohnort des Kindes?" },
  { title: "Aufenthaltsbestimmungsrecht beantragen", href: "/sorgerecht/aufenthaltsbestimmungsrecht-beantragen", desc: "Antrag auf Aufenthaltsbestimmungsrecht" },
  { title: "Aufenthaltsbestimmungsrecht entziehen", href: "/sorgerecht/aufenthaltsbestimmungsrecht-entziehen", desc: "Entzug des Aufenthaltsbestimmungsrechts" },
  { title: "Wechselmodell", href: "/sorgerecht/wechselmodell", desc: "Das Wechselmodell im Detail" },
  { title: "Aufenthaltsbestimmungsrecht Wechselmodell", href: "/sorgerecht/aufenthaltsbestimmungsrecht-wechselmodell", desc: "Wechselmodell und Aufenthalt" },
];
---

<Layout title="Sorgerecht" description="Alles zum Thema Sorgerecht in der Schweiz: Gemeinsames Sorgerecht, Obhut, Umgangsrecht und Aufenthaltsbestimmungsrecht">
    <header class="bg-navy pt-32 pb-16">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6">Sorgerecht in der Schweiz</h1>
            <p class="text-xl text-blue-100">Elterliche Sorge, Obhut und Umgangsrecht</p>
        </div>
    </header>

    <section class="py-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid gap-6">
                {articles.map(article => (
                    <a href={article.href} class="block bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition border-l-4 border-gold">
                        <h2 class="text-xl font-bold text-navy mb-2">{article.title}</h2>
                        <p class="text-gray-600">{article.desc}</p>
                    </a>
                ))}
            </div>
        </div>
    </section>

    <CTA
        title="Fragen zum Sorgerecht?"
        text="Lassen Sie sich von einem spezialisierten Familienrechtsanwalt beraten."
    />
</Layout>
